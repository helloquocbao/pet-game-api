// prisma/schema.prisma

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int    @id @default(autoincrement())
  email     String @unique
  password  String
  createdAt DateTime @default(now())
 pets      Pet[]   // One-to-many: Một user có nhiều thú
}

model Pet {
  id        Int      @id @default(autoincrement())
  name      String
  species   String
  hp        Int      @default(100)
  damage    Int      @default(10)
  luck      Int      @default(5)
  stamina   Int      @default(100)
  ownerId   Int
  owner     User     @relation(fields: [ownerId], references: [id])
  createdAt DateTime @default(now())
}

model Admin {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  password String
  createdAt DateTime @default(now())
}